@model Solution.Web.Models.AbonnementViewModel

@{
    ViewBag.Title = "ConfirmAbonnement";
}

<h2>ConfirmAbonnement</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AbonnementViewModel</h4>
        <hr />
        <div class="card h-25">
            <a href="#">
                <img src="~/Content/@Model.ImageAbonnementM" alt="slider-image" class="img-responsive">
            </a>
            <div class="card-body">
                <p class="card-text">
                    <dl class="dl-horizontal ">
                        <dt>
                            Motif du Paiement
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ImageAbonnementM)
                        </dd>
                        <dt>
                            Etat d'abonnement
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.StateM)
                        </dd>
                        <dt>
                            Date d'abonnement
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DateDebutAbonnementM)
                        </dd>
                        <dt>
                            Date d'expiration
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DateFinAbonnementM)
                        </dd>
                        <dt>
                            Utilisateur ID
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UtilisateurId)
                        </dd>

                    </dl>
                </p>
            </div>

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
