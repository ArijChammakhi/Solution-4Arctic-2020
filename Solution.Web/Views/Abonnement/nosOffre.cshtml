<link rel="stylesheet" type="text/css" href="~/Content/Abonnements.css" />
<script src="~/Scripts/jquery.slim.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.min.abonnement.js"></script>

@model IEnumerable<Solution.Web.Models.AbonnementViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Client.cshtml";
}

<center><h2>Nos Abonnements</h2></center>
<section class="pricing py-5">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.abonnement.css" />

    <div class="container">
        </br>
        <div class="row">
            <!-- Free Tier -->
            <div class="col-lg-4">
                <div class="card mb-5 mb-lg-0">
                    <div class="card-body">
                        <h5 class="card-title text-muted text-uppercase text-center">Gratuit</h5>
                        <h6 class="card-price text-center">DT 0<span class="period">/moi</span></h6></br>
                        <center><img src="~/Front End/images/AbonnementGratuit.png" /></center>
                        <hr>
                        <ul class="fa-ul">
                            <li><span class="fa-li"><i class="livicon" data-name="check" data-size="18" data-loop="true" data-c="#787878" data-hc="787878"></i></span>Gestion des Bien Immobilier</li>
