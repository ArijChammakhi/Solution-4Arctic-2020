@model Solution.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/login_registre.cshtml";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary("", new { @class = "form-group" })
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "sr-only" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Firstname" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "sr-only" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "LastName" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control ", @placeholder = "Email" })
        </div>
    </div>
    @*<div class="form-group">
            @Html.LabelFor(m => m.Cin, new { @class = "sr-only" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cin, new { @class = "form-control ", @placeholder = "Cin" })
            </div>
        </div>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "sr-only" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Addresse" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Role", new { @class = "sr-only" })
        <div class="col-md-10">

            @Html.DropDownList("Role", (SelectList)ViewBag.Roles, "<--Select your Role-->")
        </div>
    </div>


    <input type="submit" class="btn btn-block btn-primary" value="Sign up">
    <p>Have account already? Please go to </p><a href="@Url.Action("Login","Account")"><strong> Sign In</strong></a>

}




